@model LoginViewModel

<form method="post" asp-action="LogIn">
    <div class="form-group row">
        <div class="col-sm-2">
        <label>Användarnamn: </label>
    </div>
    <div class="col-sm-4">
        <input asp-for="UserName" class="form-control" />
    </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label>Lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <input type="checkbox" title="Remember me" asp-for="RememberMe" class="form-check" />
            <label>Kom ihåg mig</label>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>

    <label>Har du inget konto?</label>
    <a asp-action="Register">Registrera dig</a>

</form>

<form method="post" asp-controller="Account" asp-action="Logout">
<AuthorizeView>
    <Authorized>
    <input type="submit" value="Logga ut" />
        </Authorized>
</AuthorizeView>
</form>


<link rel="stylesheet" href="styles.css" />

<style>
    form {
        width: 80%;
        margin: 0 auto;
    }

    /* Justera label-stil */
    label {
        font-weight: bold;
    }

    /* Justera utseendet på input-fält */
    input[type="text"],
    input[type="password"],
    input[type="email"],
    input[type="tel"] {
        width: 100%;
        padding: 10px;
        margin: 6px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Justera knappens utseende */
    button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>